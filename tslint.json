{
  "rulesDirectory": [
    "../tslint-consistent-codestyle/rules",
    "../tslint-defocus/dist",
    "../tslint-eslint-rules/dist/rules"
  ],
  "rules": {
    "align": {
      "options": [
        "parameters",
        "statements"
      ]
    },
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      {
        "limit": 140,
        "ignore-pattern": "^import |^export {(.*?)}"
      }
    ],
    "no-any": {
      "severity": "warning"
    },
    "no-redundant-jsdoc": true,
    "no-var-requires": false,
    "space-before-function-paren": {
      "options": {
        "anonymous": "never",
        "asyncArrow": "always",
        "constructor": "never",
        "method": "never",
        "named": "never"
      }
    },
    "variable-name": false,
    "deprecation": {
      "severity": "warning"
    },
    "indent": {
      "options": [
        "spaces",
        2
      ]
    },
    "typedef": [
      true,
      "parameter",
      "call-signature"
    ],
    "typedef-whitespace": {
      "options": [
        {
          "call-signature": "nospace",
          "index-signature": "nospace",
          "parameter": "nospace",
          "property-declaration": "nospace",
          "variable-declaration": "nospace"
        },
        {
          "call-signature": "onespace",
          "index-signature": "onespace",
          "parameter": "onespace",
          "property-declaration": "onespace",
          "variable-declaration": "onespace"
        }
      ]
    },
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ],
    "ban-types": [
      true,
      ["Object", "Use {} instead."],
      ["String", "Use string instead"],
      ["Boolean", "Use boolean instead"],
      ["Number", "Use number instead"]
    ],
    "member-access": [true, "no-public"],
    "no-parameter-reassignment": true,
    "ban-comma-operator": true,
    "no-unnecessary-class": true,
    "no-object-literal-type-assertion": true,
    "no-unused-variable": [true, {"ignore-pattern": "^_"}],
    "no-use-before-declare": true,
    "typeof-compare": true,
    "invalid-void": true,
    "prefer-readonly": true,
    "file-name-casing": "kebab-case",
    "no-angle-bracket-type-assertion": true,
    "prefer-template": true,
    "unnecessary-constructor": [true, {"check-super-calls": true}],
    "use-isnan": true,
    "valid-jsdoc": [true, {
      "prefer": {
        "return": "returns",
        "params": "param"
      },
      "requireReturn": false,
      "requireParamType": false,
      "requireReturnType": false,
      "requireParamDescription": false,
      "requireReturnDescription": false
    }],
    "valid-typeof": true,
    "switch-default": true,
    "ter-no-self-compare": true,
    "no-magic-numbers": [true, {
      "enforceConst":  true,
      "allowed-numbers": [-1, 0, 1]
    }],
    "object-shorthand-properties-first": true,
    "static-this": true,
    "no-return-undefined": true,
    "no-else-after-return": true,
    "no-unnecessary-else": true,
    "no-collapsible-if": true,
    "no-accessor-recursion": true,
    "early-exit": {
      "severity": "warn"
    },
    "naming-convention": {
      "severity": "warn",
      "options": [
        {
          "type": "class",
          "format": "PascalCase"
        },
        {
          "type": "class",
          "modifiers": "abstract",
          "prefix": "Abstract"
        },
        {
          "type": "enum",
          "format": "PascalCase"
        },
        {
          "type": "interface",
          "format": "PascalCase"
        },
        {
          "modifiers": ["global", "export"],
          "type": "variable",
          "format": ["snake_case", "UPPER_CASE"]
        },
        {
          "modifiers": ["global", "export"],
          "type": "functionVariable",
          "format": ["camelCase"]
        },
        {
          "modifiers": ["local"],
          "type": "variable",
          "format": "camelCase"
        },
        {
          "type": "property",
          "format": "camelCase"
        },
        {
          "type": "method",
          "format": "camelCase"
        },
        {
          "type": "static",
          "format": "camelCase"
        }
      ]
    },
    "interface-name": [true, "always-prefix"],
    "no-string-literal": true,
    "object-literal-sort-keys": false,
    "ter-arrow-body-style": [true, "as-needed"],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "array-bracket-spacing": [true, "never"],
    "block-spacing": [
      true,
      "always"
    ],
    "brace-style": ["error", "1tbs"],
    "no-constant-condition": true,
    "no-duplicate-case": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-unexpected-multiline": true,
    "space-in-parens": [true, "never"],
    "defocus": true,
    "ter-arrow-spacing": true,
    "ter-computed-property-spacing": [true, "never"],
    "ter-func-call-spacing": [true, "never"],
    "ter-newline-after-var": [true, "always"],
    "ter-padded-blocks": [true, "never"],
    "no-multi-spaces": true,
    "array-type": [true, "array"],
    "match-default-export-name": true,
    "number-literal-format": true,
    "no-boolean-literal-compare": true,
    "object-literal-key-quotes": [true, "consistent-as-needed"],
    "no-duplicate-imports": true,
    "no-invalid-this": true,
    "no-conditional-assignment": true,
    "encoding": true,
    "arrow-parens": true,
    "no-sparse-arrays": true,
    "ordered-imports": [
      true,
      {
        "import-sources-order": "lowercase-last",
        "named-imports-order": "case-insensitive",
        "grouped-imports": true
      }
    ],
    "only-arrow-functions": true,
    "arrow-return-shorthand": true,
    "callable-types": true,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "curly": true,
    "eofline": true,
    "forin": true,
    "import-spacing": true,
    "interface-over-type-literal": true,
    "label-position": true,
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "protected-static-field",
          "protected-instance-field",
          "private-static-field",
          "private-instance-field",
          "public-constructor",
          "protected-constructor",
          "private-constructor",
          "public-static-method",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "newline-before-return": true,
    "no-duplicate-super": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-dynamic-delete": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-implicit-dependencies": [true, "dev", "optional"],
    "no-inferrable-types": [
      false,
      "ignore-params"
    ],
    "no-this-assignment": true,
    "prefer-object-spread": true,
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-shadowed-variable": true,
    "no-string-throw": true,
    "no-unnecessary-initializer": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "object-literal-shorthand": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "one-variable-per-declaration": true,
    "prefer-const": true,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "radix": true,
    "semicolon": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "unified-signatures": true,
    "no-consecutive-blank-lines": true
  }
}
